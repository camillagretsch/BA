<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@color/grey_hell</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">200sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="HorizontalDividerStyle">
        <item name="android:layout_height">3sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="VerticalDividerStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">3sp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="VerticalLayoutStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="TableHeaderStyle" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/table_header</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5sp</item>
    </style>

    <style name="RowStyleGreyDark" parent="android:Widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/grey_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.Spinner.DropDown"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
